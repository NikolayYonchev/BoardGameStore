@model BoardGameStore.ViewModels.RentalViewModel

@{
	ViewData["Title"] = "Index";
}

<div class="container mt-4">
	<h1 class="text-center">Rent Board Game</h1>
	<div class="card">
		<h2 class="card-title">@Model.Title</h2>
		<img src="@Model.ImageUrl" alt="@Model.Title" class="small-image">
		<div class="card-body">
			<div class="form-group mt-3">
				<strong>Rental Date:</strong> @DateTime.UtcNow.ToString("MM/dd/yyyy", System.Globalization.CultureInfo.InvariantCulture)<br>
			</div>
			<div class="form-group mt-3">
				<label for="rentalEndDate">End Date</label>
				<input type="date" id="rentalEndDate" name="RentalEndDate" class="form-control" required>
			</div>
			<p class="card-text">
				<strong>Rental Price:</strong> $@Model.RentalPricePerDay<br>
				<strong>Description:</strong> @Model.Description<br />
				<strong>Condition:</strong> @Model.Condition<br />
			</p>
			<p class="card-text">
				<strong>Total:</strong> @Model.RentalPricePerDay*<br>
			</p>
			<form asp-action="Submit" asp-controller="Rental" method="post">
				<input type="hidden" name="BoardGameId" value="@Model.BoardGameId" />
				<button type="submit" class="btn btn-success">Confirm Rental</button>
				<a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
			</form>
		</div>
	</div>
</div>
