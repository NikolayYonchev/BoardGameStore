@model BoardGameStore.Models.Rental

@{
    ViewData["Title"] = "Rent a Board Game";
}

<h2>Rent a Board Game</h2>

<div class="card mb-3">
    <img class="card-img-top" src="@Model.BoardGame.ImageUrl" alt="@Model.BoardGame.Title" style="max-height: 300px; object-fit: contain;">
    <div class="card-body">
        <h4 class="card-title">@Model.BoardGame.Title</h4>
        <p class="card-text">Price per day: @Model.BoardGame.RentalPricePerDay.ToString("C")</p>
    </div>
</div>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BoardGameId" />
    <input type="hidden" asp-for="BoardGame.Title" />

    <div class="form-group">
        <label asp-for="RentalDate">Rental Date</label>
        <input asp-for="RentalDate" class="form-control" type="date" />
        <span asp-validation-for="RentalDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReturnDate">Return Date</label>
        <input asp-for="ReturnDate" class="form-control" type="date" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Confirm Rental</button>
</form>
